<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TableLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/addButtonDialog"
        android:layout_below="@+id/nameProductDialog">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:textColor="@color/colorGreen"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:text="Ilość(g)"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:id="@+id/howMuchTitle" />

            <TextView
                android:textColor="@color/colorGreen"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="center"
                android:text="kcal"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:id="@+id/kcalTitle" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="40dp"
                android:maxLength="8"
                android:inputType="numberDecimal"
                android:id="@+id/howMuchET" />
            <TextView
                android:text="0"
                android:gravity="center"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/kcalInfo" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:textColor="@color/colorGreen"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Tłuszcz(g)"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:id="@+id/fatTitle" />

            <TextView
                android:textColor="@color/colorGreen"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Białko(g)"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:id="@+id/proteinTitle" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="0"
                android:gravity="center"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:id="@+id/fatInfo" />

            <TextView
                android:text="0"
                android:gravity="center"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:id="@+id/proteinInfo" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:textColor="@color/colorGreen"
                android:textStyle="bold"
                android:text="Węglowodany(g)"
                android:gravity="center"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/carbsTitle" />

            <TextView
                android:textColor="@color/colorGreen"
                android:textStyle="bold"
                android:text="Błonnik(g)"
                android:gravity="center"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/fiberTitle" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="0"
                android:gravity="center"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:id="@+id/carbsInfo" />

            <TextView
                android:text="0"
                android:gravity="center"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:id="@+id/fiberInfo" />
        </TableRow>
    </TableLayout>

    <TextView
        android:textColor="@color/orange"
        android:textSize="20sp"
        android:text="nazwa"
        android:layout_marginTop="15dp"
        android:layout_width="359dp"
        android:layout_height="50dp"
        android:id="@+id/nameProductDialog"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:background="@drawable/rounded_button"
        android:textColor="@color/colorGreen"
        android:textStyle="bold"
        android:layout_marginRight="5dp"
        android:text="Dodaj do posiłku"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addButtonDialog"
        android:layout_alignBaseline="@+id/cancelButtonDialog"
        android:layout_alignBottom="@+id/cancelButtonDialog"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button

        android:background="@drawable/rounded_button"
        android:textColor="@color/colorGreen"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:text="anuluj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancelButtonDialog"
        android:layout_marginTop="163dp"
        android:layout_below="@+id/nameProductDialog"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
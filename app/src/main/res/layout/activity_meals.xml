<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_meals"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kamil.dyplomowa.activities.Meals">



    <ListView
        android:paddingLeft="20sp"
        android:cacheColorHint="@color/colorGreen"
        android:id="@+id/listMeals"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listMeals"
        android:layout_marginBottom="10dp">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:textColor="@color/colorGreen"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:text="kcal"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:id="@+id/kcalTitleMeals" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:textColor="@color/orange"
                android:textSize="18sp"
                android:text="0"
                android:paddingRight="3dp"
                android:gravity="center|right"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:id="@+id/kcalInfoMeals" />
            <TextView
                android:textColor= "#003300"
                android:textSize="22sp"
                android:text="/"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/breakKcalSum" />
            <TextView
                android:textColor="@color/darkOrange"
                android:textSize="18sp"
                android:text="0"
                android:paddingLeft="3dp"
                android:gravity="center|left"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:id="@+id/sumKcalInfoMeals" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:textColor="@color/colorGreen"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Tłuszcz(g)"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:id="@+id/fatTitleMeals" />

            <TextView
                android:textColor="@color/colorGreen"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Białko(g)"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:id="@+id/proteinTitleMeals" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:textColor="@color/orange"
                android:text="0"
                android:paddingRight="5dp"
                android:gravity="center|right"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:id="@+id/fatInfoMeals" />
            <TextView
                android:textColor="#003300"
                android:text="/"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/breakKcalSum2" />
            <TextView
                android:textColor="@color/darkOrange"
                android:text="0"
                android:paddingLeft="3dp"
                android:gravity="center|left"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:id="@+id/fatTotalInfoMeals" />
            <TextView
                android:textColor="@color/orange"
                android:text="0"
                android:paddingRight="5dp"
                android:gravity="center|right"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:id="@+id/proteinInfoMeal" />
            <TextView
                android:textColor="#003300"
                android:text="/"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/breakKcalSum3" />

            <TextView
                android:textColor="@color/darkOrange"
                android:text="0"
                android:paddingLeft="3dp"
                android:gravity="center|left"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:id="@+id/proteinTotalInfoMeal" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:textColor="@color/colorGreen"
                android:textStyle="bold"
                android:text="Węglowodany(g)"
                android:gravity="center"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/carbsTitleMeals" />

            <TextView
                android:textColor="@color/colorGreen"
                android:textStyle="bold"
                android:text="Błonnik(g)"
                android:gravity="center"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/fiberTitleMeals" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:textColor="@color/orange"
                android:text="0"
                android:paddingRight="5dp"
                android:gravity="center|right"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:id="@+id/carbsInfoMeals" />
            <TextView
                android:textColor="#003300"
                android:text="/"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/breakKcalSum4" />
            <TextView
                android:textColor="@color/darkOrange"
                android:text="0"
                android:paddingLeft="3dp"
                android:gravity="center|left"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:id="@+id/carbsTotalInfoMeals" />
            <TextView
                android:textColor="@color/orange"
                android:text="0"
                android:paddingRight="5dp"
                android:gravity="center|right"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:id="@+id/fiberInfoMeals" />
            <TextView
                android:textColor="#003300"
                android:text="/"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/breakKcalSum5" />

            <TextView

                android:textColor="@color/darkOrange"
                android:text="0"
                android:paddingLeft="3dp"
                android:gravity="center|left"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:id="@+id/fiberTotalInfoMeals" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tableLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:textSize="18sp"
                android:gravity="center|top"
                android:text="Zapotrzebowanie kaloryczne "
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/textView25" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:textColor="@color/colorGreen"
                android:textSize="18sp"
                android:text="-"
                android:paddingRight="4dp"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:id="@+id/textView26" />

            <TextView
                android:textColor="@color/darkOrange"
                android:textSize="25sp"
                android:text="/"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView27" />

            <TextView
                android:textColor="@color/orange"
                android:textSize="18sp"
                android:paddingRight="10dp"
                android:text="-"
                android:paddingLeft="4dp"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:id="@+id/setRequired" />
        </TableRow>
        <TableRow
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ProgressBar
                android:progressDrawable="@drawable/progress_bar_color"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/progressBar3"
                 />
        </TableRow>
        <TableRow
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:gravity="center|right"
                android:textColor="@color/orange"
                android:textSize="18sp"
                android:text=""
                android:paddingLeft="4dp"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:id="@+id/caloryProcentValue" />

            <TextView
                android:gravity="center|left"
                android:textColor="@color/orange"
                android:textSize="18sp"
                android:paddingRight="10dp"
                android:text="%"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:id="@+id/caloryProcent" />

        </TableRow>

    </TableLayout>



</RelativeLayout>

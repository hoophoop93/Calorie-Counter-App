<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_log"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kamil.dyplomowa.activities.LogActivity"
    tools:showIn="@layout/activity_log">

    <TextView
        android:textColor="@color/orange"
        android:text="Aktywność w dniu:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="16dp"
        android:id="@+id/textView11"
        android:textSize="20sp" />

    <EditText
        android:textColor="@color/colorGreen"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="DD-MM-YYYY"
        android:id="@+id/dateEditTextLog"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_toRightOf="@+id/textView11"
        android:layout_toEndOf="@+id/textView11" />

    <TextView
        android:textColor="@color/colorGreen"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateEditTextLog"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:id="@+id/nameActivityLog"
        android:textSize="24sp" />

    <TextView
        android:textColor="@color/orange"
        android:text="Dystans ->"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/textView13"
        android:textSize="20sp"
        android:layout_below="@+id/nameActivityLog"
        android:layout_alignLeft="@+id/nameActivityLog"
        android:layout_alignStart="@+id/nameActivityLog" />

    <TextView
        android:textColor="@color/orange"
        android:text="Czas ->"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView13"
        android:layout_alignLeft="@+id/textView13"
        android:layout_alignStart="@+id/textView13"
        android:layout_marginTop="40dp"
        android:id="@+id/textView20"
        android:textSize="20sp" />

    <TextView
        android:text="-/-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/distanceLog"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/textView13"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignLeft="@+id/dateEditTextLog"
        android:layout_alignStart="@+id/dateEditTextLog" />

    <TextView
        android:text="-/-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView20"
        android:layout_alignLeft="@+id/distanceLog"
        android:layout_alignStart="@+id/distanceLog"
        android:id="@+id/timeLog"
        android:textSize="20sp" />

    <ImageView
        android:layout_marginLeft="20dp"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/nameActivityLog"
        android:layout_toRightOf="@+id/nameActivityLog"
        android:id="@+id/iconActivity"
        android:layout_marginTop="-15dp" />

    <TextView
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:textColor="@color/orange"
        android:gravity="center"
        android:text="dzień"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dayWeek"
        android:layout_below="@+id/dateEditTextLog"
        android:layout_alignLeft="@+id/dateEditTextLog"
        android:layout_alignStart="@+id/dateEditTextLog" />

</RelativeLayout>
